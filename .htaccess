# Calculate For Me - SEO & Performance Optimization
RewriteEngine On

# Prevent redirect chains - Direct redirects to final destinations
# Blog redirects - Remove duplicate content
RedirectMatch 301 ^/blog/(.+)/index\.html$ /blog/$1.html
RedirectMatch 301 ^/blog/(.+)/$ /blog/$1.html

# Calculator redirects - Ensure clean URLs
RedirectMatch 301 ^/calculators/(.+)/index\.html$ /calculators/$1.html
RedirectMatch 301 ^/calculators/(.+)/$ /calculators/$1.html

# Remove trailing slashes for SEO (except for directories)
RewriteCond %{REQUEST_FILENAME} !-d
RewriteCond %{REQUEST_URI} !^/$
RewriteRule ^([^/]+)/$ /$1 [R=301,L]

# Force HTTPS (if SSL is available)
RewriteCond %{HTTPS} off
RewriteCond %{HTTP_HOST} !^localhost
RewriteRule ^(.*)$ https://%{HTTP_HOST}%{REQUEST_URI} [L,R=301]

# Prevent access to redirect directories that no longer exist
RewriteRule ^blog/.+/$ /blog/ [R=301,L]
RewriteRule ^calculators/.+/$ /calculators/ [R=301,L]

# Prevent duplicate content issues
# Remove www prefix if present (choose one version)
RewriteCond %{HTTP_HOST} ^www\.calculateforme\.xyz$ [NC]
RewriteRule ^(.*)$ https://calculateforme.xyz/$1 [R=301,L]

# Prevent URL parameters from creating duplicate content
RewriteCond %{QUERY_STRING} !^$
RewriteCond %{QUERY_STRING} !^utm_
RewriteCond %{REQUEST_URI} \.(html|php)$
RewriteRule ^(.*)$ /$1? [R=301,L]

# Security headers for better SEO performance
<IfModule mod_headers.c>
    Header always set X-Content-Type-Options nosniff
    Header always set X-Frame-Options DENY
    Header always set X-XSS-Protection "1; mode=block"
    Header always set Referrer-Policy "strict-origin-when-cross-origin"
</IfModule>

# Enable compression for faster loading
<IfModule mod_deflate.c>
    AddOutputFilterByType DEFLATE text/plain
    AddOutputFilterByType DEFLATE text/html
    AddOutputFilterByType DEFLATE text/xml
    AddOutputFilterByType DEFLATE text/css
    AddOutputFilterByType DEFLATE application/xml
    AddOutputFilterByType DEFLATE application/xhtml+xml
    AddOutputFilterByType DEFLATE application/rss+xml
    AddOutputFilterByType DEFLATE application/javascript
    AddOutputFilterByType DEFLATE application/x-javascript
</IfModule>

# Browser caching for better performance
<IfModule mod_expires.c>
    ExpiresActive on
    ExpiresByType text/css "access plus 1 year"
    ExpiresByType application/javascript "access plus 1 year"
    ExpiresByType image/png "access plus 1 year"
    ExpiresByType image/jpg "access plus 1 year"
    ExpiresByType image/jpeg "access plus 1 year"
    ExpiresByType image/gif "access plus 1 year"
    ExpiresByType image/svg+xml "access plus 1 year"
</IfModule>